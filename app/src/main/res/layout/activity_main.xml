        <GridLayout
            android:id="@+id/linha_menu_loterias"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_40"
            android:layout_marginEnd="@dimen/margin_20"
            android:columnCount="4"
            android:rowCount="4"
            android:useDefaultMargins="true"
            app:layout_constraintBottom_toTopOf="@+id/btn_listar_loterias"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!--        aqui dentro vai as linhas do menu-->


            <LinearLayout
                android:id="@+id/menu_mega_sena"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/simbolo_loteria"
                    android:src="@drawable/ic_teste_splash" />

                <TextView
                    style="@style/EstiloRotuloCampos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/mega_sena" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_lotofacil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/simbolo_loteria"
                    android:src="@drawable/ic_teste_splash" />

                <TextView
                    style="@style/EstiloRotuloCampos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/lotofacil" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_quina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/simbolo_loteria"
                    android:src="@drawable/ic_teste_splash" />

                <TextView
                    style="@style/EstiloRotuloCampos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/quina" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_lotomania"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/simbolo_loteria"
                    android:src="@drawable/ic_teste_splash" />

                <TextView
                    style="@style/EstiloRotuloCampos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/lotomania" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_timemania"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/simbolo_loteria"
                    android:src="@drawable/ic_teste_splash" />

                <TextView
                    style="@style/EstiloRotuloCampos"
