                    android:layout_gravity="center"
                    android:text="@string/dia_de_sorte" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_super_sete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/simbolo_loteria"
                    android:src="@drawable/ic_teste_splash" />

                <TextView
                    style="@style/EstiloRotuloCampos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/super_sete" />

            </LinearLayout>


        </GridLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_listar_loterias"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_20"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_40"
            android:layout_marginEnd="@dimen/margin_20"
            android:text="Aumente sua Chance"
            app:icon="@drawable/ic_teste_splash"
            app:iconGravity="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linha_menu_loterias" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>