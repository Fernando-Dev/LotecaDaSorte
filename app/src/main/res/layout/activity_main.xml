    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.view.main.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginEnd="@dimen/margin_20"
        android:layout_marginBottom="@dimen/margin_20">


        <!--<com.synnapps.carouselview.CarouselView
            android:id="@+id/carousel_proximos_sorteios"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginEnd="@dimen/margin_20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/linha_menu_loterias"
            app:layout_constraintTop_toTopOf="parent"/>-->


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/main_recycler_menu_loterias"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintBottom_toTopOf="@+id/btn_listar_loterias"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:spanCount="4"
            tools:itemCount="9"
            tools:listitem="@layout/item_main_menu_loteria" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_listar_loterias"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_40"
            android:padding="@dimen/margin_20"
            android:text="Aumente sua Chance"
            app:icon="@drawable/ic_teste_splash"
            app:iconGravity="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_recycler_menu_loterias" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>