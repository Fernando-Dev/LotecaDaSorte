<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/TelaCheia"
    tools:context=".ui.view.main.Splashscreen">


    <ImageView
        android:id="@+id/img_splashscreen"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_teste_splash"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_name_app"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/EstiloTextoTitulo"
        android:textSize="@dimen/text_size_20"
        android:layout_marginTop="@dimen/margin_15"
        android:gravity="center_horizontal"
        android:text="@string/name_app"
        android:textColor="@color/cor_verde"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_splashscreen" />

    <TextView
        android:id="@+id/txt_text_status_splashscreen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_30"
        android:gravity="center_horizontal"
        style="@style/EstiloTextoSubititulo"
        android:textColor="@color/cor_verde"
        android:textSize="@dimen/text_size_16"
        android:text="Atualizando Bases"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>